<mvc:View controllerName="billing.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">

  <customHeader>
  <OverflowToolbar id="otbHeader">
    <Title id="hdrTitle" text="Billing"/>

    <Button id="btnCreate" text="Create" type="Emphasized"
            class="myCreateBtn" press=".onCreate"/>
    <Button id="btnDelete" icon="sap-icon://delete" press=".onDelete"
            tooltip="Delete selected"/>

    <!-- Icons links von der Suche -->
    <Button id="btnFilter" icon="sap-icon://filter" press=".onFilter"/>
    <Button id="btnSettings" icon="sap-icon://action-settings" press=".onSettings"/>

    <ToolbarSpacer id="hdrSpacer"/>

    <SearchField id="sfSearch" width="18rem" placeholder="Search"
                 liveChange=".onSearchLive"/>
  </OverflowToolbar>
</customHeader>

